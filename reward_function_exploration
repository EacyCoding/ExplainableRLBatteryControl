export CLRFE_DATA_PATH="/Users/kingsleyenweye/Desktop/INTELLIGENT_ENVIRONMENT_LAB/citylearn/CityLearn/data_reward_function_exploration/"
export CLRFE_EPIOSIDE_TIMESTEPS="8760"
export CLRFE_EPISODES="10"
export CLRFE_SIMULATION_PERIOD_START="0"
export CLRFE_SIMULATION_PERIOD_END=$((($CLRFE_EPIOSIDE_TIMESTEPS * $CLRFE_EPISODES) - 1))
export CLRFE_DETERMINISTIC_PERIOD_START=$(($CLRFE_EPIOSIDE_TIMESTEPS * 7))
export CLRFE_REGRESSION_BUFFER_CAPACITY="30000"
export CLRFE_START_TRAINING=$(($CLRFE_EPIOSIDE_TIMESTEPS * 3))
export CLRFE_EXPLORATION_PERIOD=$(($CLRFE_START_TRAINING + 1))
export CLRFE_START_REGRESSION=$(($CLRFE_EPIOSIDE_TIMESTEPS * 1))
export CLRFE_ACTION_SCALING_COEF="0.5"
export CLRFE_REWARD_SCALING="5.0"

python -m reward_function_exploration rl_agents_coord marlisa -e $CLRFE_EPISODES --data_path ${CLRFE_DATA_PATH}Climate_Zone_1 --simulation_period $CLRFE_SIMULATION_PERIOD_START $CLRFE_SIMULATION_PERIOD_END -dps $CLRFE_DETERMINISTIC_PERIOD_START  --regression_buffer_capacity $CLRFE_REGRESSION_BUFFER_CAPACITY --start_training $CLRFE_START_TRAINING --exploration_period $CLRFE_EXPLORATION_PERIOD --start_regression $CLRFE_START_REGRESSION --information_sharing --action_scaling_coef $CLRFE_ACTION_SCALING_COEF --reward_scaling $CLRFE_REWARD_SCALING
