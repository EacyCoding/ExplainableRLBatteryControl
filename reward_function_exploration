export CLRFE_DATA_PATH="data_reward_function_exploration/Climate_Zone_2"
export CLRFE_STATE_ACTION_SPACE_FILENAME="buildings_state_action_space.json"
export CLRFE_EPISODE_TIMESTEPS="8760"
export CLRFE_EPISODES="10"
export CLRFE_SIMULATION_PERIOD_START="0"
export CLRFE_SIMULATION_PERIOD_END=$(($CLRFE_EPISODE_TIMESTEPS - 1))
export CLRFE_DETERMINISTIC_PERIOD_START=$(($CLRFE_EPISODE_TIMESTEPS * 7))
export CLRFE_REGRESSION_BUFFER_CAPACITY="30000"
export CLRFE_START_TRAINING=$(($CLRFE_EPISODE_TIMESTEPS * 3))
export CLRFE_EXPLORATION_PERIOD=$(($CLRFE_START_TRAINING + 1))
export CLRFE_START_REGRESSION=$(($CLRFE_EPISODE_TIMESTEPS * 1))
export CLRFE_ACTION_SCALING_COEF="0.5"
export CLRFE_REWARD_SCALING="5.0"

python -m citylearn_cli marlisa marlisa -e $CLRFE_EPISODES --data_path ${CLRFE_DATA_PATH} --buildings_states_actions ${CLRFE_DATA_PATH}/${CLRFE_STATE_ACTION_SPACE_FILENAME} --simulation_period $CLRFE_SIMULATION_PERIOD_START $CLRFE_SIMULATION_PERIOD_END -dps $CLRFE_DETERMINISTIC_PERIOD_START  --regression_buffer_capacity $CLRFE_REGRESSION_BUFFER_CAPACITY --start_training $CLRFE_START_TRAINING --exploration_period $CLRFE_EXPLORATION_PERIOD --start_regression $CLRFE_START_REGRESSION --information_sharing --action_scaling_coef $CLRFE_ACTION_SCALING_COEF --reward_scaling $CLRFE_REWARD_SCALING